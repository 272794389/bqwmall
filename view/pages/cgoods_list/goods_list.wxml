<navbar parameter='{{parameter}}'></navbar>
<authorize bind:onLoadFun="onLoadFun"></authorize>
<view class='productList'>
   <view class='search bg-color acea-row row-between-wrapper' style='top:{{navH}}rpx'>
      <view class="samebox">
           <view class='iconfont icon-fenlei1}}' bindtap='goStyle' style="color:#fff;width: 60rpx;float: left;"></view>
           <view  bindtap='set_where' data-type='1' class=' classstyle {{condition==1 ? "on" : ""}}'>同城</view>
           <picker mode="multiSelector" bindchange="bindRegionChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{valueRegion}}" custom-item="{{customItem}}" range="{{multiArray}}">
               <view  bindtap='set_where' data-type='2' class=' classstyle {{condition==3 ? "on" : ""}}'>{{model2}}</view>
           </picker>
     </view>
      <view class='input acea-row row-between-wrapper'>
        <text class='iconfont icon-sousuo'></text>
        <form bindsubmit="searchSubmit">
          <input placeholder='搜索商品信息' placeholder-class='placeholder'  placeholder='搜索商品名称' placeholder-class='placeholder' bindconfirm="searchSubmit" confirm-type='search' name="search" value='{{where.keyword}}'></input>
        </form>
      </view>
      <view class='iconfont {{is_switch==true?"icon-pailie":"icon-tupianpailie"}}' bindtap='Changswitch'></view>
   </view>
   <view class="aside" style='top:{{navH}}rpx;margin-top:86rpx'>
      <view class='item acea-row row-center-wrapper {{0 == navActive ? "on" : ""}}' bindtap='asideTap'  data-id='0'>
       <view>全部</view>
      </view>
      <block wx:for="{{category}}" wx:key='index'>
         <view class='item acea-row row-center-wrapper {{item.id == navActive ? "on" : ""}}' bindtap='asideTap' data-id='{{item.id}}'>
            <view>{{ item.cate_name }}</view>
         </view>
      </block>
   </view>
   <view class='list acea-row row-between-wrapper {{is_switch==true?"":"on"}}'>
      <block wx:for="{{productList}}" wx:key='index'>
         <view class='item {{is_switch==true?"":"on"}}' bindtap="goDetail" data-items='{{item}}'>
            <view class='pictrue {{is_switch==true?"":"on"}}'>
               <image src='{{item.image}}' class='{{is_switch==true?"":"on"}}'></image>
               <text  class='{{is_switch === true ? "pictrue_log_big" : "pictrue_log"}} pictrue_log_class' wx:if="{{item.activity && item.activity.type ==='1'}}">秒杀</text>
               <text  class='{{is_switch === true ? "pictrue_log_big" : "pictrue_log"}} pictrue_log_class' wx:if="{{item.activity && item.activity.type === '2'}}">砍价</text>
               <text  class='{{is_switch === true ? "pictrue_log_big" : "pictrue_log"}} pictrue_log_class' wx:if="{{item.activity && item.activity.type === '3'}}">拼团</text>
            </view>
            <view class='text {{is_switch==true?"":"on"}}'>
               <view class='name line1'>{{item.store_name}}</view>
               <view class='money font-color'>￥<text class='num'>{{item.price}}</text><text class="shou" style="text-decoration:line-through;">原价{{ item.ot_price }}</text></view>
               <view class="money">
                          <text class="activity" style="color: #e93323;font-size:20rpx;" wx:if="{{item.give_rate>0}}">可用购物积分抵扣{{ item.give_rate }}元</text>
                          <text class="shou" style="margin-left:0rpx;" wx:else>已售{{ item.sales }}{{ item.unit_name }}</text>
               </view>
            </view>
         </view>
      </block>
      <view class='loadingicon acea-row row-center-wrapper' wx:if='{{productList.length > 0}}'>
         <text class='loading iconfont icon-jiazai' hidden='{{loading==false}}'></text>{{loadTitle}}
      </view>
   </view>
</view>
<view class='noCommodity' wx:if="{{productList.length==0}}">
   <view class='pictrue'><image src='/images/noShopper.png'></image></view>
   <recommend host_product="{{host_product}}"></recommend>
</view>
<home></home>
