<navbar parameter='{{parameter}}'></navbar>
<view class='bill-details'>
   <view class='nav acea-row'>
      <view class='item {{type==0 ? "on":""}}' data-type='0' bindtap='changeType'>全部</view>
      <view class='item {{type==2 ? "on":""}}' data-type='2' bindtap='changeType'>收入</view>
      <view class='item {{type==1 ? "on":""}}' data-type='1' bindtap='changeType'>支出</view>
   </view>
   <view class='sign-record'>
      <view class='list' wx:for="{{userBillList}}" wx:key='index'>
          <view class='item'>
            <view class='data'>{{item.time}}</view>
            <view class='listn'>
                <view class='itemn acea-row row-between-wrapper' wx:for="{{item.list}}" wx:for-item="vo" wx:key='index'>
                  <view>
                      <view class='name line1' style="width:490rpx;">{{vo.mark}}</view>
                      <view>{{vo.add_time}}</view>
                  </view>
                  <view wx:if="{{recodeType==1}}">
                    <view class='num' wx:if="{{vo.give_point>0}}">+{{vo.give_point}}</view>
                    <view class='num font-color' wx:else>{{vo.give_point}}</view>
                  </view>
                  <view wx:elif="{{recodeType==2}}">
                    <view class='num' wx:if="{{vo.pay_point>0}}">+{{vo.pay_point}}</view>
                    <view class='num font-color' wx:else>{{vo.pay_point}}</view>
                  </view>
                  <view wx:elif="{{recodeType==3}}">
                    <view class='num' wx:if="{{vo.repeat_point>0}}">+{{vo.repeat_point}}</view>
                    <view class='num font-color' wx:else>{{vo.repeat_point}}</view>
                  </view>
                </view>
            </view>
          </view>
      </view>
      <view class='loadingicon acea-row row-center-wrapper'>
        <text class='loading iconfont icon-jiazai' hidden='{{loading==false}}'></text>{{loadTitle}}
     </view>
    </view>
</view>
<authorize bind:onLoadFun='onLoadFun'></authorize>